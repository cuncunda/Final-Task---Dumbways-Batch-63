<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/project-style.css" />
    <title>My Project</title>
  </head>
  <body>

    <!-- Form Section -->
    <section class="addmyProject">
      <div class="container">
        <div class="title">
          <h2>Add My Project</h2>
        </div>

        <form action="/add-project" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="project-name" class="form-label">Project Name</label>
            <input
              type="text"
              class="form-control"
              id="project-name"
              name="name"
              placeholder="Input Project Name"
            />

            <div class="row g-3 mt-2">
              <div class="col">
                <label for="start-date" class="form-label">Start Date</label>
                <input
                  type="date"
                  id="start-date"
                  class="form-control"
                  name="start_date"
                  required
                />
              </div>
              <div class="col">
                <label for="end-date" class="form-label">End Date</label>
                <input
                  type="date"
                  id="end-date"
                  class="form-control"
                  name="end_date"
                  required
                />
              </div>
            </div>

            <div class="mt-3">
              <label for="description" class="form-label">Description</label>
              <textarea
                id="description"
                name="desc"
                class="form-control"
                placeholder="Add Description"
                required
              ></textarea>
            </div>
          </div>

          <label class="form-label">Technologies</label>
          <div class="mb-3">
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="checkbox"
                name="technologies"
                value="Node Js"
                id="nodejs"
              />
              <label class="form-check-label" for="nodejs">Node JS</label>
            </div>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="checkbox"
                name="technologies"
                value="React Js"
                id="reactjs"
              />
              <label class="form-check-label" for="reactjs">React JS</label>
            </div>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="checkbox"
                name="technologies"
                value="Next Js"
                id="nextjs"
              />
              <label class="form-check-label" for="nextjs">Next JS</label>
            </div>
            <div class="form-check form-check-inline">
              <input
                class="form-check-input"
                type="checkbox"
                name="technologies"
                value="Typescript"
                id="typescript"
              />
              <label
                class="form-check-label"
                for="typescript"
              >TypeScript</label>
            </div>
          </div>

          <div class="input-group mb-3">
            <input
              type="file"
              class="form-control"
              name="image"
              id="input-gambar"
              accept="image/*"
            />
            <label class="input-group-text" for="input-gambar">Upload</label>
          </div>

          <div class="button">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
    </section>

    <!-- Project List -->
    <section class="my-project mt-5">
      <div class="wrapper">
        <h2 class="text-center mb-4">My Project</h2>
        <div class="row g-4">
          {{#each projects}}
            <div class="col-md-4">
              <div class="card shadow-sm p-3">
                {{#if image_url}}
                  <img
                    src="{{image_url}}"
                    class="card-img-top"
                    alt="{{name}}"
                  />
                {{else}}
                  <img
                    src="https://via.placeholder.com/300x200"
                    class="card-img-top"
                    alt="{{name}}"
                  />
                {{/if}}

                <div class="card-body">
                  <h5 class="card-title">{{name}}</h5>
                  <p class="card-text">{{description}}</p>
                  <p class="card-text">
                    <small>{{formatDate this.start_date}}
                      -
                      {{formatDate this.end_date}}</small>
                  </p>
                  {{#each technologies}}
                    <span class="badge bg-secondary me-1">{{this}}</span>
                  {{/each}}
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </section>

    <script src="/js/script.js"></script>
  </body>
</html>