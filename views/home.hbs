<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.13.1/font/bootstrap-icons.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@200;400;600;800&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />

    <title>{{title}}</title>
  </head>
  <body>

    <!-- Konten -->
    <div class="container">
      <div class="text-content">
        <div class="title">
          <h1>Hi, I'm Cunda ðŸ‘‹</h1>
        </div>
        <div class="sub">
          <h4>Indie Hacker & Full-Stack Developer</h4>
        </div>
        <div class="paragraph">
          <p>
            I build and ship digital products from scratch to production.
            Passionate about creating end-to-end solutions and turning ideas
            into fully functional applications. With expertise in both frontend
            and backend development, I handle everything from initial concept to
            deployment and maintenance.
          </p>
        </div>
        <div class="descr">
          <div class="location">
            <i class="fa-solid fa-location-dot"></i>
            <p>Bandung, Jawa Barat, Indonesia</p>
          </div>
          <div class="status">
            <i class="bi bi-dot icon-large"></i>
            <p>Available for new projects</p>
          </div>
        </div>
        <div class="cta">
          <div class="button-wa">
            <img src="/images/WhatsApp.svg.webp" width="24" height="24" />
            <p>Lets talk</p>
          </div>
          <div class="button-dwn">
            <i class="fa-solid fa-download"></i>
            <p>Download CV</p>
          </div>
        </div>
      </div>
      <div class="image-content">
        <img src="/images/Frame 282.png" alt="" />
      </div>
    </div>

    <!-- tech-stack -->
    <div class="container tech-stack" id="tech-stack">
      <section>
        <div class="title-tech">
          <h1>Tech Stack - Tools I Use Everyday</h1>
        </div>
        <div class="logo-stack">
          <div class="logo-box"><img
              src="/images/Bootstrap_logo.svg.png"
              class="logo"
            /></div>
          <div class="logo-box"><img
              src="/images/express-js-logo-png_seeklogo-339850.png"
              class="logo"
            /></div>
          <div class="logo-box"><img
              src="/images/free-postgresql-icon-svg-download-png-1175120.webp"
              class="logo"
            /></div>
          <div class="logo-box"><img
              src="/images/node-js-icon.webp"
              class="logo"
            /></div>
          <div class="logo-box"><img
              src="/images/react.png"
              class="logo"
            /></div>
          <div class="logo-box"><img
              src="/images/Tailwind_CSS_Logo.svg.png"
              class="logo"
            /></div>
          <div class="logo-box"><img
              src="/images/Sass_Logo_Color.svg.png"
              class="logo"
            /></div>
          <div class="logo-box"><img
              src="/images/Unity-Symbol.png"
              class="logo"
            /></div>
          <div class="logo-box"><img
              src="/images/AJAX_logo_by_gengns.svg.png"
              class="logo"
            /></div>
          <div class="logo-box"><img src="/images/git.png" class="logo" /></div>
          <div class="logo-box"><img
              src="/images/githu.png"
              class="logo"
            /></div>
          <div class="logo-box"><img src="/images/vue.png" class="logo" /></div>
          <div class="logo-box"><img
              src="/images/apinejs.webp"
              class="logo"
            /></div>
        </div>
      </section>
    </div>

    <!-- xprnc -->
    <section id="experience" class="container my-5">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Work Experiences</h2>

        {{#if user}}
          <button
            class="btn btn-primary"
            data-bs-toggle="modal"
            data-bs-target="#addExperienceModal"
          >+ Add Experience</button>
        {{/if}}
      </div>

      <div class="mt-3">
        {{#each experiences}}
          <div class="card shadow-sm my-3">
            <div class="card-body d-flex align-items-center">
              {{#if logo}}
                <img
                  src="{{logo}}"
                  alt="{{company}} logo"
                  width="50"
                  class="me-3"
                  style="margin-bottom: auto; object-fit: contain;"
                />
              {{/if}}
              <div>
                <h5>{{title}}</h5>
                <p class="mb-1"><strong>{{company}}</strong></p>
                <small>{{date}}</small>
                <p>{{description}}</p>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </section>

    <!-- prjcts -->
    <section id="projects" class="container my-5">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">My Projects</h2>

        {{#if user}}
          <button
            class="btn btn-primary"
            data-bs-toggle="modal"
            data-bs-target="#addProjectModal"
          >+ Add Project</button>
        {{/if}}
      </div>

      <hr class="mb-4" />

      <div class="row g-4">
        {{#each projects}}
          <div class="col-md-6">
            <div class="project-card shadow-sm h-100">
              {{#if image}}
                <img
                  src="{{image}}"
                  alt="{{title}}"
                  class="project-image w-100"
                  style="margin-bottom: auto; object-fit: contain;"
                />
              {{/if}}
              <div class="project-content p-4">
                <h3 class="mb-2">{{title}}</h3>
                <p class="text mb-3">{{description}}</p>
                <div class="mb-3">
                  {{#each techStack}}
                    <span class="badge bg-secondary me-1">{{this}}</span>
                  {{/each}}
                </div>
                <div class="d-flex align-items-center">
                  <i class="bi bi-lock-fill me-2"></i>
                  Private Repository
                  <a href="#" class="ms-auto text-decoration-none">
                    <i class="bi bi-box-arrow-up-right me-1"></i>
                    Live Demo
                  </a>
                </div>
              </div>
            </div>
          </div>
        {{/each}}

        {{#unless projects}}
          <p class="text-muted">Belum ada project yang ditambahkan.</p>
        {{/unless}}
      </div>

      <!-- Modal xprnc -->
      <div class="modal fade" id="addExperienceModal" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header"><h5 class="modal-title">Add Experience</h5></div>
            <div class="modal-body">
              <form
                action="/add-experience"
                method="POST"
                enctype="multipart/form-data"
              >
                <input
                  type="text"
                  name="title"
                  class="form-control mb-2"
                  placeholder="Job Title"
                  required
                />
                <input
                  type="text"
                  name="company"
                  class="form-control mb-2"
                  placeholder="Company"
                  required
                />
                <input
                  type="text"
                  name="date"
                  class="form-control mb-2"
                  placeholder="Jul 2023 - Present"
                  required
                />
                <textarea
                  name="description"
                  class="form-control mb-2"
                  placeholder="Describe your role"
                ></textarea>
                <div class="mb-3">
                  <label class="form-label">Company Logo</label>
                  <input
                    type="file"
                    name="logo"
                    accept="image/*"
                    class="form-control"
                  />
                </div>
                <button
                  type="submit"
                  class="btn btn-primary w-100"
                >Save</button>
              </form>
            </div>
          </div>
        </div>
      </div>

      <!-- Modal prjct -->
      <div class="modal fade" id="addProjectModal" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header"><h5 class="modal-title">Add Project</h5></div>
            <div class="modal-body">
              <form
                action="/add-project"
                method="POST"
                enctype="multipart/form-data"
              >
                <input
                  type="text"
                  name="title"
                  class="form-control mb-2"
                  placeholder="Project Title"
                  required
                />
                <input
                  type="text"
                  name="techStack"
                  class="form-control mb-2"
                  placeholder="Tech Stack (comma separated)"
                />
                <textarea
                  name="description"
                  class="form-control mb-2"
                  placeholder="Project Description"
                ></textarea>
                <div class="mb-3">
                  <label class="form-label">Project Image</label>
                  <input
                    type="file"
                    name="image"
                    accept="image/*"
                    class="form-control"
                  />
                </div>
                <button
                  type="submit"
                  class="btn btn-success w-100"
                >Save</button>
              </form>
            </div>
          </div>
        </div>
      </div>

    </section>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>